{
  "name": "tiled-tiff-converter-plugin",
  "version": "0.1.0",
  "title": "Tiled Tiff Converter plugin",
  "description": "Plugin to convert images to tiled tiff",

  "containerId": "localhost:5000/wippttconv:0.1",

  "inputs": [
    {
      "name": "input",
      "type": "collection",
      "format_type": "tiledtiff",
      "required": true,
      "description": "Images inputs for the plugin."
    },
    {
      "name": "sizeX",
      "type": "number",
      "required": true,
      "description": "Height of the tile"
    },
    {
      "name": "sizeY",
      "type": "number",
      "required": true,
      "description": "Width of the tile"
    }
  ],
  "outputs": [
    {
      "name": "output",
      "type": "collection",
      "format_type": "tiledtiff",
      "required": true,
      "description": "Output data for the plugin"
    }
  ],
  "ui": [
    {
      "key": "inputs.input",
      "title": "Image Collection : ",
      "description": "Pick a collection..."
    }
  ]
}